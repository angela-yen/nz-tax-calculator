<h1 class="text-3xl font-bold mb-6 text-center">New Zealand Tax Calculator</h1>

<div class="mb-8">
  <%= render 'nz_tax_calculator/nz_tax_info' %>
</div>

<div class="mb-8">
  <%= render 'nz_tax_calculator/calculator' %>
</div>

<% if @tax_amount.present? %>
  <div class="bg-green-100 text-green-800 font-semibold px-4 py-3 rounded shadow-md max-w-md mx-auto mb-6">
    <p>Tax Amount: $<%= @tax_amount %></p>
  </div>
<% end %>

<% if @tax_breakdown.present? %>
   <%= render 'nz_tax_calculator/tax_breakdown' %>
<% end %>